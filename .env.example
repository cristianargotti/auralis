# AURALIS — Environment Variables
# Copy to .env and fill in your values

# ── Authentication (REQUIRED) ──
# Username for login
AURALIS_AUTH_USERNAME=admin
# Password hash — generate with:
#   python -c "from passlib.hash import bcrypt; print(bcrypt.hash('your-secure-password'))"
AURALIS_AUTH_PASSWORD_HASH=$2b$12$CHANGE_ME_RUN_THE_COMMAND_ABOVE
# JWT secret — generate with: openssl rand -hex 32
AURALIS_JWT_SECRET=change-me-run-openssl-rand-hex-32

# OpenAI (required for BRAIN layer)
OPENAI_API_KEY=sk-your-key-here

# AWS (for EC2 deployment)
AWS_PROFILE=mibaggy-co
AWS_REGION=us-east-1

# Server
AURALIS_HOST=0.0.0.0
AURALIS_PORT=8000
AURALIS_ENV=development

# Storage
AURALIS_PROJECTS_DIR=./projects
AURALIS_SAMPLES_DIR=./samples
