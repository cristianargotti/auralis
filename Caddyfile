:80 {
    # API backend
    handle /api/* {
        reverse_proxy api:8000
    }

    handle /docs {
        reverse_proxy api:8000
    }

    handle /redoc {
        reverse_proxy api:8000
    }

    handle /openapi.json {
        reverse_proxy api:8000
    }

    handle /health {
        reverse_proxy api:8000
    }

    handle /ws/* {
        reverse_proxy api:8000
    }

    # Frontend (catch-all)
    handle {
        reverse_proxy web:3000
    }
}
